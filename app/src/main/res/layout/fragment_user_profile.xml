<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_container_user_profile"
    tools:context="com.cilic.zlatan.travelhop.UserProfile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.093">

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/username_header"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/sign_out_all_caps"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:id="@+id/sign_out"
                android:textSize="13sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:id="@+id/line_separator_user_feed_search_page"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.001"
            android:background="@android:color/darker_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/scroll_view_container"
            android:layout_weight="0.906">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:layout_margin="11dp"
                    android:id="@+id/user_profile_avatar"
                    android:src="@drawable/default_user_avatar"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/user_profile_avatar"
                    android:id="@+id/followers_options_container">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/posts_count"
                        android:text="0"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:lines="2"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followers_count"
                        android:text="0"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:lines="2"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/posts_count"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/following_count"
                        android:text="0"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:lines="2"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_toEndOf="@id/followers_count"/>


                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_profile"
                        android:text="@string/edit_profile"
                        android:layout_margin="14dp"
                        android:background="@drawable/login_button"
                        android:layout_below="@+id/posts_count"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_avatar"
                    android:textSize="17sp"
                    android:paddingStart="5dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="11dp"
                    android:textStyle="bold"
                    android:id="@+id/user_profile_name" />

                <utils.ExpandableGridView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:columnWidth="90dp"
                    android:stretchMode="columnWidth"
                    android:id="@+id/grid_view"/>

            </RelativeLayout>

        </ScrollView>




    </LinearLayout>




</android.support.v4.widget.SwipeRefreshLayout>
