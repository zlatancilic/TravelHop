<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cilic.zlatan.travelhop.UserFeed">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.093"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_user_feed_page"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.99"
                android:padding="5dp"
                android:src="@drawable/logo_letters" />

            <View
                android:id="@+id/line_separator_user_feed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.907"
            android:id="@+id/userFeedListView">
        </ListView>


    </LinearLayout>

</FrameLayout>
